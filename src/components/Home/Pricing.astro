---
const plans = [
  {
    label: "Starter",
    features: [
      "<strong>Unlimited</strong> podcasts",
      "<strong>Unlimited</strong> Team members/collaborators",
      "<strong>50</strong> Private podcast subscribers",
      "<strong>20K</strong> Monthly downloads",
      "Live customer support",
      "Advanced analytics",
      "Built-in podcast website",
    ],
  },
  {
    label: "Professional",
    features: [
      "<strong>Unlimited</strong> podcasts",
      "<strong>Unlimited</strong> Team members/collaborators",
      "<strong>500</strong> Private podcast subscribers",
      "<strong>100K</strong> Monthly downloads",
      "Live customer support",
      "Advanced analytics",
      "Built-in podcast website",
      "Dynamic ads (pre-roll, mid-roll, post-roll)",
      "Dynamic show notes",
      "Auto-post to YouTube",
    ],
  },
  {
    label: "Business",
    features: [
      "<strong>Unlimited</strong> podcasts",
      "<strong>Unlimited</strong> Team members/collaborators",
      "<strong>3K</strong> Private podcast subscribers",
      "<strong>250K</strong> Monthly downloads",
      "Live customer support",
      "Advanced analytics",
      "Built-in podcast website",
      "Dynamic ads (pre-roll, mid-roll, post-roll)",
      "Dynamic show notes",
      "Auto-post to YouTube",
      "Remove branding from player",
    ],
  },
];
---

<section class="mb-10">
  <div class="container w-full px-3 mx-auto md:px-6">
    <div class="text-center">
      <h3 class="text-4xl font-medium">Pricing</h3>
      <p class="mt-4 text-xl text-gray">Try us free for 14 days.</p>
    </div>

    <div>
      <div
        class="mx-auto mt-5 -space-x-1 overflow-hidden text-sm text-white bg-transparent border rounded-lg w-fit border-gold-strong"
      >
        <button class="px-4 py-1 hover:bg-gold-strong">Monthly</button>
        <button class="px-4 py-1 bg-gold-strong">Yearly</button>
      </div>
      <p class="mt-3 text-sm font-thin text-center text-white/80">
        12 months for the price of 10 when you pay yearly. All prices in USD.
      </p>
    </div>

    <main class="grid gap-8 mt-10 md:grid-cols-3">
      {
        plans.map((plan) => (
          <div class="flex flex-col mx-auto overflow-hidden text-black sm:max-w-sm md:mx-0 rounded-xl">
            <div class="z-10 flex-1 p-8 bg-gradient-to-br from-[#F2F2F2] to-white rounded-b-xl">
              <header class="mb-6 space-y-3 text-center group">
                <h3 class="text-xl font-semibold text-dark">{plan.label}</h3>
                <p>
                  <span class="text-3xl font-bold font text-black/80">
                    $190
                  </span>
                  <sup>/yr</sup>
                </p>

                <div>
                  <a
                    href=""
                    class="block px-3 py-2 mx-auto text-sm transition-colors border rounded-lg w-fit border-dark group-hover:bg-dark group-hover:text-white"
                  >
                    Start free trial
                  </a>
                </div>
              </header>

              <div>
                <ul class="space-y-3 text-sm text-black/80">
                  {plan.features.map((feature) => (
                    <li class="flex justify-center gap-1 text-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 text-green-500"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M4.5 12.75l6 6 9-13.5"
                        />
                      </svg>
                      <span set:html={feature} class="underline" />
                    </li>
                  ))}
                </ul>
              </div>
            </div>

            <a
              href=""
              class="flex items-center justify-center w-full gap-1 pb-5 -mt-2 font-medium transition-colors pt-7 bg-gold-strong hover:bg-gold-600 text-dark"
            >
              <span>Buy {plan.label}</span>
              <svg
                class="relative right-0 w-5 h-5 ml-1 transition-all group-hover:-right-1"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </main>
  </div>
</section>

<script>
  const monthlySubscription = {
    starter: 19,
    professional: 49,
    business: 99,
  };
  const yearlySubscription = {
    starter: 190,
    professional: 490,
    business: 990,
  };
</script>
