<div class="relative overflow-hidden py-44">
  <div class="flex container px-4 sm:px-6 mx-auto flex-col gap-8">
    <h1
      class="font-semibold lg:font-bold tracking-tight text-5xl sm:text-5xl lg:text-[5.6rem] leading-[1.1]"
    >
      Your podcast's<span class="block text-gold">publishing platform</span>
    </h1>
    <span class="inline-flex">
      <span class="text-md md:text-2xl space-y-4 lg:space-y-0"
        ><span class="block lg:inline">Record & upload your podcast.</span>
        <span class="inline-flex">
          <span> We'll distribute it to</span>
          <div class="relative">
            <span class="absolute ml-3 font-medium text-md md:text-2xl">
              <span
                class="absolute flex gap-2 items-center whitespace-nowrap transition-opacity opacity-1"
                podcast-service
                data-service="spotify"
              >
                <svg class="w-7 h-7 md:w-9 md:h-9 fill-white">
                  <use href="/assets/icons.svg#icon-spotify"></use>
                </svg>
                <span>Spotify</span>
              </span>
              <span
                class="absolute flex gap-2 items-center whitespace-nowrap transition-opacity opacity-0"
                podcast-service
                data-service="google_podcast"
              >
                <svg class="w-7 h-7 md:w-9 md:h-9 fill-white">
                  <use href="/assets/icons.svg#icon-google-podcast"></use>
                </svg>
                <span>Google Podcasts</span>
              </span>
              <span
                class="absolute flex gap-2 items-center whitespace-nowrap transition-opacity opacity-0"
                podcast-service
                data-service="apple_podcast"
              >
                <svg class="w-7 h-7 md:w-9 md:h-9 fill-white">
                  <use href="/assets/icons.svg#icon-apple-podcast"></use>
                </svg>
                <span>Apple Podcasts</span>
              </span>
            </span>
          </div>
        </span></span
      >
    </span>
    <a
      href="#"
      class="flex items-center px-6 md:px-8 py-3 md:py-4 text-lg font-medium border-2 rounded-full group border-dark-transparent ring-gold/90 ring-1 w-fit bg-gradient-to-r from-gold to-gold/80 text-dark hover:bg-gold"
    >
      <span>Start 14-day <span class="font-semibold">free trial</span></span>
      <svg
        class="relative right-0 w-5 h-5 ml-1 transition-all group-hover:-right-1"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
      </svg>
    </a>
  </div>
  <!-- background -->
  <div class="-z-[1] absolute inset-0 w-full h-full">
    <div class="relative w-full h-full lg:right-12">
      <div
        class="absolute inset-0 z-10 w-full h-full rounded-tr-[500px] lg:overflow-hidden"
      >
        <img
          class="rounded-lg h-auto min-h-full w-auto min-w-full max-w-none absolute -right-1/3 md:right-0"
          src="/assets/homepage-hero-image.jpg"
          alt="Messy podcast studio"
        />
      </div>
      <div
        class="absolute inset-0 z-10 w-full h-full bg-gradient-to-r from-dark to-dark/70"
      >
      </div>
    </div>
  </div>
</div>

<script>
  const services = ["spotify", "google_podcast", "apple_podcast"];
  const servicesEl = document.querySelectorAll("[podcast-service]");
  let service = "spotify";
  let currentIndex = 0;

  setInterval(() => {
    if (currentIndex === services.length - 1) {
      currentIndex = 0;
      service = services[currentIndex];
    } else {
      service = services[++currentIndex];
    }

    servicesEl.forEach((el) => {
      if (el instanceof HTMLElement) {
        if (el.dataset.service !== service) {
          el.classList.remove("opacity-100");
          el.classList.add("opacity-0");
        } else {
          el.classList.remove("opacity-0");
          el.classList.add("opacity-1");
        }
      }
    });
  }, 1000);
</script>
