<div id="aos-hero" class="relative overflow-hidden py-44">
  <div class="container flex flex-col gap-8 px-4 mx-auto sm:px-6">
    <h1
      class="font-semibold lg:font-bold tracking-tight text-5xl sm:text-5xl lg:text-[5.6rem] leading-[1.1]"
      data-aos="fade-down"
      data-aos-delay="50"
      data-aos-anchor="#aos-hero"
    >
      Your podcast's<span class="block text-gold">publishing platform</span>
    </h1>
    <span class="inline-flex">
      <span
        class="space-y-4 text-md md:text-2xl lg:space-y-0"
        data-aos="fade-down"
        data-aos-delay="100"
        data-aos-anchor="#aos-hero"
        ><span class="block lg:inline">Record & upload your podcast.</span>
        <span class="inline-flex items-center">
          <span> We'll distribute it to</span>
          <div class="relative" x-data="podcastPlatforms">
            <template x-for="(platform, idx) in platforms">
              <template x-if="active === idx">
                <span
                  class="ml-3 flex items-center gap-2 font-medium text-md md:text-2xl whitespace-nowrap"
                  data-aos="zoom-right"
                  data-aos-duration="1000"
                  data-aos-anchor="#aos-hero"
                >
                  <svg class="w-7 h-7 md:w-9 md:h-9 fill-white">
                    <use x-bind:href="platform.icon"></use>
                  </svg>
                  <span x-text="platform.label"></span>
                </span>
              </template>
            </template>
          </div>
        </span>
      </span>
    </span>
    <a
      href="#"
      class="flex items-center px-6 py-3 text-lg font-medium border-2 rounded-full md:px-8 md:py-4 group border-dark-transparent ring-gold/90 ring-1 w-fit bg-gradient-to-r from-gold to-gold/80 text-dark hover:bg-gold"
      data-aos="fade-down"
      data-aos-delay="200"
      data-aos-anchor="#aos-hero"
    >
      <span>Start 14-day <span class="font-semibold">free trial</span></span>
      <svg
        class="relative right-0 w-5 h-5 ml-1 transition-all group-hover:-right-1"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
      </svg>
    </a>
  </div>
  <!-- background -->
  <div class="-z-[1] absolute inset-0 w-full h-full">
    <div class="relative w-full h-full lg:right-6">
      <div
        class="absolute inset-0 z-10 w-full h-full rounded-tr-[500px] lg:overflow-hidden"
      >
        <img
          class="absolute w-auto h-auto min-w-full min-h-full rounded-lg max-w-none -right-1/3 md:right-0"
          src="/assets/homepage-hero-image.jpg"
          alt="Messy podcast studio"
        />
      </div>
      <div
        class="absolute inset-0 z-10 w-full h-full bg-gradient-to-r from-dark to-dark/70"
      >
      </div>
    </div>
  </div>
</div>

<script>
  import Alpine from "alpinejs";

  document.addEventListener("alpine:init", () => {
    Alpine.data("podcastPlatforms", () => ({
      active: 0,
      platforms: [
        {
          label: "Spotify",
          icon: "/assets/icons.svg#icon-spotify",
        },
        {
          label: "Google Podcasts",
          icon: "/assets/icons.svg#icon-google-podcast",
        },
        {
          label: "Apple Podcasts",
          icon: "/assets/icons.svg#icon-apple-podcast",
        },
      ],
      init() {
        setInterval(() => {
          if (this.active < this.platforms.length - 1) {
            this.active++;
          } else {
            this.active = 0;
          }
        }, 1000);
      },
    }));
  });
</script>
